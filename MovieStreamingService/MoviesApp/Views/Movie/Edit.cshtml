@model MovieViewModel

@{
    ViewData["Title"] = "Edit Movie";
}

<form asp-controller="Movie" asp-action="Edit" method="post" enctype="application/x-www-form-urlencoded">
    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="ActiveMovie.Name">Name</label>
        <input type="text" asp-for="ActiveMovie.Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ActiveMovie.Year">Year</label>
        <input type="text" asp-for="ActiveMovie.Year" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ActiveMovie.GenreId">Genre</label>
        <!-- add a drop-down for genre options: -->
        <select asp-for="ActiveMovie.GenreId" class="form-control">
            <option value="">Select a genre..</option>
            @foreach (Genre g in Model.Genres)
            {
                <option value="@g.GenreId">@g.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="ActiveMovie.ProductionStudioId">Production Studio</label>
        <!-- add a drop-down for genre options: -->
        <select asp-for="ActiveMovie.ProductionStudioId" class="form-control">
            <option value="">Select a production studio..</option>
            @foreach (ProductionStudio ps in Model.Studios)
            {
                <option value="@ps.ProductionStudioId">@ps.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="ActiveMovie.Rating">Rating</label>
        <input type="text" asp-for="ActiveMovie.Rating" class="form-control" />
    </div>

    <input type="hidden" asp-for="ActiveMovie.MovieId" />

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-controller="Movie" asp-action="List" class="btn btn-primary">Cancel</a>
</form>

